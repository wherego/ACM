#include <iostream>
#include <math.h>
using namespace std;

int main(){

	int k;
	int sum=0;
	int n;
	cin>>n;
	for(k=1;k<sqrt(n)+1;k++)
	{
if(k*(k+1)/2==n)
   {cout<<k;
      for(int j=1;j<k;j++)
      {sum+=j*j;
      break;}
    }
if(k*(k+1)/2>n&&k*(k-1)/2<n)
{
	cout<<k;
		for(int j=1;j<=k-1;j++)
		{
			sum+=j*j;
		}
		sum+=k*(n-k*(k-1)/2);
		break;
	}

}
cout<<sum;
	return 0;
}
