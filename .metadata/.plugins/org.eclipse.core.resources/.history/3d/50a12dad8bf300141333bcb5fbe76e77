#include <iostream>
#include <math.h>
using namespace std;

int main(){

	int sum=0;
	int n;
	cin>>n;
	for(int k=1;k*(k+1)/2<=n;k++)
	{
if(k*(k+1)==n)
{
for(int j=1;j<k;j++)
{sum+=j*j;}
}
else
	if(n>k*(k-1)/2)
	{
		for(int j=1;j<=k-1;j++)
		{
			sum+=j*j;
		}
		sum+=k*(n-k*(k-1)/2);
	}

	}
cout<<sum;
	return 0;
}
