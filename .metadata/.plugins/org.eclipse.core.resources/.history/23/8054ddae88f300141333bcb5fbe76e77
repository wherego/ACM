#include <iostream>
#include <math.h>
using namespace std;

int main() {

	int n;
	cin>>n;
	for(int k=1;k*(k+1)/2<=n;k++)
	{
if(k*(k+1)==n)
{cout<<k;}
int m=n-k*(k+1);
	}


	return 0;
}
